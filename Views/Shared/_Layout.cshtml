<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fintrack</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PersonalFinanceManager.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="mt-8 px-20 w-full flex">
        <h1 class="text-2xl font-bold text-violet-500"><a class="" asp-area="" asp-controller="Home" asp-action="Index">Fintrack</a></h1>
        <div class="flex absolute right-0 mr-14">
            <partial name="_LoginPartial.cshtml"/>
        </div>
    </nav>

    <div class="p-8">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>