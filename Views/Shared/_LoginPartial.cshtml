@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
   
   <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
   
    
    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
       <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
    </form>
    
}
else
{
    <p class="ml-8"><a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a></p>
    <div class="ml-8 bg-violet-500 py-2 px-8 rounded-md relative bottom-2">
        <p class="text-center text-slate-50"><a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a></p>
    </div>
}
